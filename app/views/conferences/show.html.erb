<% content_for :title, 'Dashboard' %>

<div class="flex flex-wrap gap-y-6 -mx-3">
  <div class="w-1/3 px-3">
    <%= render 'tile' do %>
      <h2 class="text-right">
        <span class="text-4xl font-medium"><%= @active_user_count %></span> active users<br>
        <span class="text-4xl font-medium text-slate-400"><%= @user_count %></span> total users<br>
        <span class="text-4xl text-green-400">+<%= @active_user_count_increase %></span> in 30 days<br>
      </h2>
    <% end %>
  </div>

  <div class="w-1/3 px-3">
    <%= render 'tile' do %>
      <h2 class="text-right mb-2">
        <span class="text-4xl font-medium"><%= @favourite_count %></span> favourites<br>
        <span class="text-slate-400 font-medium text-4xl"><%= @favourite_count_average.round(1) %></span> favorites per user
      </h2>
      <%= bar_chart @favourite_histogram_data, height: '480px', colors: ['#475569'], library: { barPercentage: 1, categoryPercentage: 1, borderSkipped: true, inflateAmount: 0, scales: { x: { reverse: true } }, y: { type: 'linear', ticks: { maxTicksLimit: @favourite_histogram_data.length / 5 + 1, stepSize: 5 } } } %>
    <% end %>
  </div>
</div>


