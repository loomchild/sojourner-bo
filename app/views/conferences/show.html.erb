<% content_for :title, 'Dashboard' %>

<div class="flex flex-wrap gap-y-6 -mx-3">
  <div class="w-1/3 px-3">
    <%= render 'tile' do %>
      <h2 class="text-right">
        <span class="text-4xl font-medium"><%= @user_count %></span> total users<br>
        <span class="text-4xl text-green-400">+<%= @user_count_increase %></span> in 30 days
      </h2>
    <% end %>
  </div>

  <div class="w-1/3 px-3">
    <%= render 'tile' do %>
      <h2 class="text-right">
        <span class="text-4xl font-medium"><%= @active_user_count %></span> active users<br>
        <span class="text-4xl text-green-400">+<%= @active_user_count_increase %></span> in 30 days
      </h2>
    <% end %>
  </div>

  <div class="w-1/3 px-3">
    <%= render 'tile' do %>
      <h2 class="text-right">
        <span class="text-4xl font-medium"><%= @favourite_count %></span> favourites<br>
        <span class="text-slate-400 font-medium text-4xl"><%= @favourite_count_average.round(1) %></span> favorites per user
      </h2>
    <% end %>
  </div>

  <div class="w-1/3 px-3">
    <%= render 'tile' do %>
      <h2 class="text-xl font-medium">Favourites histogram</h2>
      <%= bar_chart @favourite_histogram_data, height: '400px', library: { barPercentage: 1, categoryPercentage: 1, borderSkipped: true, inflateAmount: 0 } %>
    <% end %>
  </div>
</div>


